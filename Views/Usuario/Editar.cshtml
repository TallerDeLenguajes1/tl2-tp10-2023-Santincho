@using kanban.Models
@model kanban.ViewModels.ModificarUsuarioViewModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>Editar Usuario</h2>

<form asp-controller="Usuario" asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="NombreDeUsuario">Nombre:</label>
        <input asp-for="NombreDeUsuario" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Contrasena">Contrase√±a:</label>
        <input type="password" asp-for="Contrasena" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Rol">Rol:</label>
        <select asp-for="Rol" asp-items="Html.GetEnumSelectList<Roles>()">
            <option value="">Selecciona un estado</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>