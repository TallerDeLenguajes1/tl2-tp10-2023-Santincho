@{
    ViewData["Title"] = "Usuarios";
}

@using kanban.ViewModels
@model List<ListarUsuariosViewModel>


<h2>Usuarios</h2>
<a asp-controller="Usuario" asp-action="CrearUsuario">Crear Usuario</a>

<table class="table table-dark">
    <thead>
        <tr>
            <th hidden>ID</th>
            <th>Nombre</th>
            <th>Rol</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td hidden>@usuario.Id</td>
                <td>@usuario.NombreDeUsuario</td>
                <td>@usuario.Rol</td>

                <td>
                    <a asp-controller="Tarea" asp-action="ListByUser" asp-route-userId="@usuario.Id">Ver Tareas</a>

                </td>
                <td>
                    <a asp-controller="Usuario" asp-action="Editar" asp-route-id="@usuario.Id">Editar</a>

                </td>
                <td>
                    <form asp-controller="Usuario" asp-action="Eliminar" asp-route-id="@usuario.Id" method="post"
                        onsubmit="return confirm('¿Estás seguro de que deseas eliminar este Usuario?')">
                        <input type="hidden" name="_method" value="delete" />
                        <button type="submit">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>